<script>
  const url = `http://localhost:3000/apiproduct/detail/<%= idsp %>`;
  console.log(url);
  fetch(url)
    .then(function (res) {
      console.log(res); //xem thử trong console của trình duyệt nhé
      if (!res.ok) {
        throw new Error("Lỗi = " + res.status);
      }
      return res.json();
    })
    .then(function (data) {
      const detailImg = `  <div class="d-flex flex-column justify-content-center">
      <div class="main_image">
        <img
          src="/images/${data.hinh}"
          id="main_product_image"
          width="350"
        />
      </div>
      <div class="thumbnail_images">
        <ul id="thumbnail">
          <li>
            <img
              onclick="changeImage(this)"
              src="/images/${data.hinh}"
              width="70"
            />
          </li>
          <li>
            <img
              onclick="changeImage(this)"
              src="/images/${data.hinh}"
              width="70"
            />
          </li>
          <li>
            <img
              onclick="changeImage(this)"
              src="/images/${data.hinh}"
              width="70"
            />
          </li>
          <li>
            <img
              onclick="changeImage(this)"
              src="/images/${data.hinh}"
              width="70"
            />
          </li>
        </ul>
      </div>
    </div>`;

      const detail = `
    <div class="p-3 right-side">
    <div class="d-flex justify-content-between align-items-center">
      <h3 class="tenSP">${data.tensp}</h3>
      <span class="heart"><i class="bx bx-heart"></i></span>
    </div>
    <div class="mt-2 pr-3 content">
      <p>
        Xuất xứ: <b>${data.xuatxu} </b>
      </p>
      <p>Quy cách đóng gói: <b>${data.quycach}</b></p>
    </div>
    <h3>${data.gia} Vnđ</h3>
    <div class="ratings d-flex flex-row align-items-center">
      <div class="d-flex flex-row">
        <i class="bx bxs-star"></i> <i class="bx bxs-star"></i>
        <i class="bx bxs-star"></i> <i class="bx bxs-star"></i>
        <i class="bx bx-star"></i>
      </div>
      <span>${data.view} views</span>
    </div>
  
    <div class="buttons d-flex flex-row mt-5 gap-3">
      <button class="btnn buy">Mua ngay</button>
      <button class="btnn addcart" onclick="addCart(${data.id}, '${data.tensp}', ${data.gia}, '${data.hinh}')">Thêm vào giỏ</button>
    </div>
    
  </div>
    `;
      document.querySelector(".detail").innerHTML = detail;
      document.querySelector(".detailImg").innerHTML = detailImg;
    })
    .catch(function (error) {
      console.log("Lỗi: ", error);
    });
</script>
